<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Altkom.IGEXAO.MicroCAD.WPFClient.Resources">


    <s:Double x:Key="Width">150</s:Double>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF001780"/>
    <SolidColorBrush x:Key="ForegroundBrush">White</SolidColorBrush>
    
    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="MinWidth" Value="{StaticResource Width}" />
        
    </Style>

    
    <!--<Style TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>-->

    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}" />

    <Style x:Key="HelpButtonStyle" TargetType="Button" 
           BasedOn="{StaticResource DefaultButtonStyle}" >
        <Setter Property="Background" Value="Red" />
    </Style>
    
</ResourceDictionary>